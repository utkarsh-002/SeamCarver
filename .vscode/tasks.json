{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build seam_carver",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-lc",
                "g++ -std=c++17 -o seam_carver seam_carver.cpp `pkg-config --cflags --libs opencv4`"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
